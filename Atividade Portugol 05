programa {
  funcao inicio() {
    //Declaração de variáveis

    real altura,peso_ideal,constante


    //Declaração de constantes

    constante real K = 72.7
    constante inteiro B = 58


    //Entrada de dados

    escreva("Informe a altura do homem: ")
    leia(altura)

   

    //Processamento

  peso_ideal = K * altura - B

    //Saída de dados
    escreva("O peso do homem é: ", peso_ideal)
  }
}
